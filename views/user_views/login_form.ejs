
<html>
    <head>
        <title>Sunshine Classes</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="my_css.css" rel="stylesheet" type="text/css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body style="background:#19e69b !important;" class="d-flex justify-content-center">
        <form action="verify_login" method="post" id="login_form" class="float-right" >
            <div class="container-fluid mt-5 p-md-5 m-2 p-3">
                <div class="row justify-content-center d-flex">
                    <div class="col-md-5 shadow-lg p-3 bg-white rounded">
                        <div class="row">
                            <div class="col-12 d-flex justify-content-center">
                                <img src="images/sunshine_logo.png" class="w-25">
                            </div>
                            <h3 class="text-center fw-bold mt-2">User Login</h3>
                            <div class="col-12 mt-2">
                                <label>Enter Mobile:</label>
                                <input type="number" class="form-control" name="user_mobile" id="user_mobile" required >
                            </div>
                            <div class="col-12 mt-3">
                                <label>Enter Password:</label>
                                <input type="password" class="form-control" name="user_password" id="user_password" required>
                            </div>
                            <div class="col-md-6 col-12 mt-5">
                                <span class="text-primary text-decoration-underline" onclick="show()">Create Account</span>
                            </div>
                            <div class="col-md-6 col-12 mt-5">
                                <button class="btn btn-primary float-end"  id="Btn" style="font-size: 17;">Login</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <script>
            function show(){
                login_form = document.getElementById("login_form");
                register_form = document.getElementById("register_form");
                if(login_form.style.display == "none"){
                    login_form.style.display = "inline";
                    register_form.style.display = "none"
                }
                else{
                    login_form.style.display = "none";
                    register_form.style.display = "inline"
                } 
            }

            function verify(){
                pass1 = document.getElementById("pass1").value;
                pass2 = document.getElementById("pass2").value;
                if(pass1 == pass2){
                    document.getElementById("register_btn").removeAttribute("disabled");
                    document.getElementById("msg").innerText="";
                    return true;
                }
                else{
                    document.getElementById("register_btn").setAttribute("disabled",true);
                    document.getElementById("msg").innerText="* Check Password";
                    return false;
                }
        
            }

            function validate_form(){
                var mobile = document.getElementById("register_mobile").value;
                var email = document.getElementById("register_email").value;
                var validRegex = "[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$";
                if((mobile.length == 10) && (email.match(validRegex))){
                    document.getElementById("email_error_msg").innerText = "";
                    document.getElementById("mobile_error_msg").innerText = "";
                    return true;
                }
                else{
                    // alert("Please enter valid data...");
                    if(mobile.length != 10){
                        document.getElementById("mobile_error_msg").innerText = "* Enter valid Mobile Number";
                    }
                    else{
                        document.getElementById("email_error_msg").innerText = "* Enter valid Email Address";
                    }
                    return false;
                }
                
            }
        </script>
        
        
        <form action="register_user" method="post" id="register_form" name="register_form" onsubmit="return validate_form()" style="display:none;"  >
            <div class="container-fluid mt-5 ">
                <div class="row justify-content-center d-flex p-2 p-md-0">
                    <div class="col-md-5 shadow-lg p-3 bg-white rounded">
                        <div class="row ">
                            <div class="col-12 d-flex justify-content-center">
                                <img src="images/sunshine_logo.png" class="w-25">
                            </div>
                            <h3 class="text-center fw-bold">Create Account</h3>
                            <div class="col-12 mt-3">
                                <label>Enter Name:</label>
                                <input type="text" id="register_name" name="user_name" class="form-control" required>
                            </div>
                            <div class="col-12 mt-3">
                                <label>Enter Mobile:</label>
                                <input type="number" id="register_mobile" name="user_mobile" class="form-control" required>
                                <span id="mobile_error_msg"style="color: red;"></span>
                            </div>
                            <div class="col-12 mt-3">
                                <label>Enter Email:</label>
                                <input type="email" id="register_email" name="user_email" class="form-control" required>
                                <span id="email_error_msg"style="color: red;"></span>
                            </div>
                            <div class="col-12 mt-3">
                                <label>Enter Password:</label>
                                <input type="text" id="pass1" name="user_password" class="form-control" required>
                            </div>
                            <div class="col-12 mt-3">
                                <label>Confirm Password:</label>
                                <input type="text" id="pass2"  class="form-control" onkeyup="verify()">
                                <span id="msg"style="color: red;"></span>
                            </div>
                            <div class="col-12 mt-5">
                                <span class="text-primary text-decoration-underline" onclick="show()">Login Account</span>
                                <button class="btn btn-primary float-end" id="register_btn" onclick="verify()">Register</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        </div>
        
    </body>
</html>
